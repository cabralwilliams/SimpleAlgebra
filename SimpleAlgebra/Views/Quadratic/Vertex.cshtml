@{
    ViewData["Title"] = "Quadratic: Vertex Form";
}

<div class="d-flex flex-wrap">
    <div class="col-12 col-md-3">
        <h2>Quadratic: Vertex Form</h2>
    </div>
    <div class="d-flex flex-wrap justify-content-between col-12 col-md-9">
        <div class="d-flex flex-column col-12 col-md-8">
            <div class="d-flex flex-column">
                <div class="col-10 col-md-8 d-flex justify-content-center mb-3">
                    <h3>Question 1</h3>
                </div>
                <div class="col-10 col-md-8 d-flex justify-content-center">
                    <span><span><i>y</i> =&nbsp;</span>
                    @if (Model.Vert1A == -1)
                    {
                        <span>-</span>
                        @if(Model.Vert1H > 0)
                        {
                            <span>(<i>x</i> - @Model.Vert1H)</span>
                        }
                        else
                        {
                            <span>(<i>x</i> + @(-Model.Vert1H))</span>
                        }
                    }
                    else if(Model.Vert1A != 1)
                    {
                        <span>@Model.Vert1A</span>
                        @if(Model.Vert1H > 0)
                        {
                            <span>(<i>x</i> - @Model.Vert1H)</span>
                        }
                        else
                        {
                            <span>(<i>x</i> + @(-Model.Vert1H))</span>
                        }
                    }
                    else
                    {
                        @if(Model.Vert1H > 0)
                        {
                            <span>(<i>x</i> - @Model.Vert1H)</span>
                        }
                        else
                        {
                            <span>(<i>x</i> + @(-Model.Vert1H))</span>
                        }
                    }
                    <sup>2</sup>
                    @if(Model.Vert1K > 0)
                    {
                        <span>&nbsp;+&nbsp;@Model.Vert1K</span>
                    }
                    else
                    {
                        <span>&nbsp;-&nbsp;@(-Model.Vert1K)</span>
                    }
                    </span>
                </div>
                <div class="col-10 col-md-8 d-flex justify-content-center">
                    <p>In what quadrant does the vertex of the above quadratic function lie?</p>
                </div>
            </div>
            <div class="d-flex flex-column">
                <div class="col-10 col-md-8 d-flex justify-content-center mb-3">
                    <h3>Question 2</h3>
                </div>
